<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.uamp.ui.HelpActivity">

    <include
        android:id="@+id/includeProfile"
        layout="@layout/navigation_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Finding any difficulties with the app ?" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="20sp"
        android:text="Contact Developers"
        android:textAppearance="@style/TextAppearance.AppCompat.Tooltip"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+265884537011"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:layout_alignStart="@+id/textView32" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="+265882311559" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:text="Email"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Tooltip"
        android:layout_below="@+id/textView32"
        android:layout_alignEnd="@+id/textView34"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="virtuallabs123@gmail.com"
        android:layout_below="@+id/textView33"
        android:layout_alignEnd="@+id/textView30" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/ic_help"
        android:layout_below="@+id/textView28"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_mail"
        android:layout_alignTop="@+id/textView34"
        android:layout_alignStart="@+id/textView32"
        android:layout_marginTop="-70dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_phone"
        android:layout_below="@+id/textView30"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/imageView8" />
</RelativeLayout>
