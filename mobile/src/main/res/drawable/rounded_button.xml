<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#51d6ed" android:width="0.1dp"/>
            <stroke android:color="#51ea65" android:width="0.5dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:bottomRightRadius="70dp"
                android:bottomLeftRadius="70dp"
                android:topRightRadius="70dp"
                android:topLeftRadius="70dp"/>
        </shape>
    </item>
</selector>